generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  ARTIST
  CLIENT
}

enum ArtistPlan {
  RESIDENT
  GUEST
}

enum BookingStatus {
  OPEN
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum CouponType {
  PERCENTAGE
  FIXED
}

enum ProductType {
  DIGITAL
  PHYSICAL
}

enum FichaStatus {
  PENDING
  COMPLETED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  phone         String?
  role          UserRole  @default(CLIENT)
  accounts      Account[]
  sessions      Session[]
  
  // Relations
  artist   Artist?
  bookings Booking[]
  orders   Order[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Artist {
  id                String     @id @default(cuid())
  userId            String     @unique
  plan              ArtistPlan @default(GUEST)
  commissionRate    Float      @default(0.30)
  monthlyEarnings   Float      @default(0)
  commissionThreshold Float    @default(10000)
  isActive          Boolean    @default(true)
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  // Relations
  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookings Booking[]
  products Product[]
  coupons  Coupon[]

  @@map("artists")
}

model Booking {
  id               String        @id @default(cuid())
  artistId         String
  clientId         String
  slotId           String
  value            Float
  discountValue    Float         @default(0)
  finalValue       Float
  studioShare      Float
  artistShare      Float
  status           BookingStatus @default(OPEN)
  fichaUrl         String?
  fichaStatus      FichaStatus   @default(PENDING)
  confirmationSent Boolean       @default(false)
  googleEventId    String?       // ID do evento no Google Calendar
  couponId         String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // Relations
  artist Artist @relation(fields: [artistId], references: [id])
  client User   @relation(fields: [clientId], references: [id])
  slot   Slot   @relation(fields: [slotId], references: [id])
  coupon Coupon? @relation(fields: [couponId], references: [id])

  @@map("bookings")
}

model Slot {
  id        String   @id @default(cuid())
  macaId    Int      // 1, 2, 3
  startTime DateTime
  endTime   DateTime
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  bookings Booking[]

  @@map("slots")
}

model Product {
  id          String      @id @default(cuid())
  artistId    String
  title       String
  description String?
  basePrice   Float
  markup      Float       @default(0.20) // 20% markup padr√£o
  finalPrice  Float
  type        ProductType
  imageUrl    String?
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  artist     Artist      @relation(fields: [artistId], references: [id])
  orderItems OrderItem[]

  @@map("products")
}

model Coupon {
  id          String     @id @default(cuid())
  artistId    String
  code        String     @unique
  type        CouponType
  value       Float      // Percentage (0-100) or fixed amount
  minValue    Float?     // Minimum order value
  maxUses     Int?       // Maximum number of uses
  currentUses Int        @default(0)
  isActive    Boolean    @default(true)
  expiresAt   DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  // Relations
  artist   Artist    @relation(fields: [artistId], references: [id])
  bookings Booking[]
  orders   Order[]

  @@map("coupons")
}

model Order {
  id            String   @id @default(cuid())
  clientId      String
  total         Float
  discountValue Float    @default(0)
  finalTotal    Float
  couponId      String?
  status        String   @default("PENDING")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  client User        @relation(fields: [clientId], references: [id])
  coupon Coupon?     @relation(fields: [couponId], references: [id])
  items  OrderItem[]

  @@map("orders")
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  quantity  Int    @default(1)
  price     Float

  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model Offer {
  id          String    @id @default(cuid())
  title       String
  description String
  imageUrl    String?
  isActive    Boolean   @default(true)
  startsAt    DateTime?
  endsAt      DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("offers")
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("subscribers")
}

model KioskEntry {
  id           String   @id @default(cuid())
  name         String
  email        String?
  phone        String?
  type         String   // "CLIENT" or "COMPANION"
  marketingOptIn Boolean @default(false)
  createdAt    DateTime @default(now())

  @@map("kiosk_entries")
}

