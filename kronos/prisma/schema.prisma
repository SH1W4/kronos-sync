generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum UserRole {
  ADMIN
  ARTIST
  CLIENT
}

enum ArtistPlan {
  ASSOCIATED
  RESIDENT
  GUEST
}

enum BookingStatus {
  OPEN
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum CouponType {
  PERCENTAGE
  FIXED
}

enum ProductType {
  DIGITAL
  PHYSICAL
}

enum FichaStatus {
  PENDING
  COMPLETED
}

enum SettlementStatus {
  PENDING
  REVIEW
  APPROVED
  REJECTED
}


model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  phone         String?
  role          UserRole  @default(CLIENT)
  customColor   String    @default("#8B5CF6")
  accounts      Account[]
  sessions      Session[]
  
  // Relations
  artist        Artist?
  bookings      Booking[]
  orders        Order[]
  memberships   WorkspaceMember[]
  ownedWorkspaces Workspace[]   @relation("WorkspaceOwner")
  
  // Invite System
  invitedBy     User?         @relation("UserInvites", fields: [invitedById], references: [id])
  invitedById   String?
  invitedUsers  User[]        @relation("UserInvites")
  createdInvites InviteCode[] @relation("Creator")
  anamneses     Anamnesis[]
  agentLogs     AgentLog[]
  generatedCoupons Coupon[] @relation("GeneratedBy")
  usedCoupons      Coupon[] @relation("UsedBy")
  workspaceRequests WorkspaceRequest[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// ... (rest of the file until the end)

model InviteCode {
  id          String      @id @default(cuid())
  code        String      @unique
  role        UserRole    @default(CLIENT)
  targetPlan  ArtistPlan? // Se for convite para artista, define se é RESIDENT ou GUEST
  creatorId   String
  workspaceId String?     // Se for convite para workspace específico
  maxUses     Int         @default(1)
  currentUses Int         @default(0)
  expiresAt   DateTime?
  durationDays Int?       // Para convites GUEST, define quantos dias o perfil será válido
  isActive    Boolean     @default(true)
  
  creator     User        @relation("Creator", fields: [creatorId], references: [id])
  workspace   Workspace?  @relation(fields: [workspaceId], references: [id])
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("invite_codes")
}

model Workspace {
  id            String    @id @default(cuid())
  name          String
  slug          String    @unique
  logoUrl       String?
  primaryColor  String    @default("#8B5CF6")
  ownerId       String
  owner         User      @relation("WorkspaceOwner", fields: [ownerId], references: [id])
  
  // Payment Config (Custom PIX)
  pixKey        String? 
  pixRecipient  String?
  
  // Settings
  capacity      Int       @default(5) // Número de macas/cadeiras

  members       WorkspaceMember[]
  artists       Artist[]
  bookings      Booking[]
  slots         Slot[]
  products      Product[]
  coupons       Coupon[]
  orders        Order[]
  offers        Offer[]
  subscribers   Subscriber[]
  kioskEntries  KioskEntry[]
  invites       InviteCode[]
  helpArticles  HelpArticle[]
  anamneses     Anamnesis[]
  agentLogs     AgentLog[]
  settlements   Settlement[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("workspaces")
}

model WorkspaceMember {
  id          String    @id @default(cuid())
  workspaceId String
  userId      String
  role        UserRole  @default(ARTIST)
  
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())

  @@unique([workspaceId, userId])
  @@map("workspace_members")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model VerificationCode {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email, code])
  @@map("verification_codes")
}

model Artist {
  id                String     @id @default(cuid())
  userId            String     @unique
  workspaceId       String?    // Inicialmente opcional para facilitar migração
  plan              ArtistPlan @default(GUEST)
  commissionRate    Float      @default(0.30)
  monthlyEarnings   Float      @default(0)
  commissionThreshold Float    @default(10000)
  isActive          Boolean    @default(true)
  instagram         String?    @db.Text
  validUntil        DateTime?  // Data limite para perfis GUEST (provisórios)
  
  // Google Calendar Integration
  googleCalendarId     String?    // Primary calendar ID
  googleRefreshToken   String?    @db.Text // For API access (encrypted)
  calendarSyncEnabled  Boolean    @default(false)
  lastSyncedAt         DateTime?
  
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  // Relations
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace? @relation(fields: [workspaceId], references: [id])
  bookings  Booking[]
  products  Product[]
  coupons   Coupon[]
  kioskEntries KioskEntry[]
  settlements  Settlement[]

  @@map("artists")
}

model Booking {
  id               String        @id @default(cuid())
  artistId         String
  clientId         String
  workspaceId      String?
  slotId           String
  value            Float
  discountValue    Float         @default(0)
  finalValue       Float
  studioShare      Float
  artistShare      Float
  status           BookingStatus @default(OPEN)
  fichaUrl         String?
  fichaStatus      FichaStatus   @default(PENDING)
  confirmationSent Boolean       @default(false)
  scheduledFor     DateTime
  duration         Int           @default(120) // em minutos
  
  // Google Calendar Sync
  googleEventId    String?       // Link to Google Calendar event
  syncedToGoogle   Boolean       @default(false)
  notes            String?       @db.Text
  
  couponId         String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  // Relations
  artist    Artist    @relation(fields: [artistId], references: [id])
  client    User      @relation(fields: [clientId], references: [id])
  workspace Workspace? @relation(fields: [workspaceId], references: [id])
  slot      Slot      @relation(fields: [slotId], references: [id])
  coupon    Coupon?   @relation(fields: [couponId], references: [id])
  anamnesis Anamnesis?
  
  settlementId String?
  settlement   Settlement? @relation(fields: [settlementId], references: [id])

  @@map("bookings")
}

model Slot {
  id          String   @id @default(cuid())
  workspaceId String?
  macaId      Int      // 1, 2, 3
  startTime   DateTime
  endTime     DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  workspace Workspace? @relation(fields: [workspaceId], references: [id])
  bookings  Booking[]

  @@map("slots")
}

model Product {
  id          String      @id @default(cuid())
  artistId    String
  workspaceId String?
  title       String
  description String?
  basePrice   Float
  markup      Float       @default(0.20) // 20% markup padrão
  finalPrice  Float
  type        ProductType
  imageUrl    String?
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  artist     Artist      @relation(fields: [artistId], references: [id])
  workspace  Workspace?  @relation(fields: [workspaceId], references: [id])
  orderItems OrderItem[]

  @@map("products")
}

model Coupon {
  id            String   @id @default(cuid())
  code          String   @unique
  discountPercent Int    @default(10)
  workspaceId   String?
  
  // Referral Fields
  originClientId String?
  originClient   User?   @relation("GeneratedBy", fields: [originClientId], references: [id])
  
  usedByUserId   String?
  usedByUser     User?   @relation("UsedBy", fields: [usedByUserId], references: [id])
  
  artistId       String?
  status         String   @default("ACTIVE") // ACTIVE, USED, EXPIRED
  
  createdAt      DateTime @default(now())
  expiresAt      DateTime?
  updatedAt      DateTime @updatedAt // Adicionado para manter compatibilidade
  
  // Relations preserved/updated
  workspace      Workspace? @relation(fields: [workspaceId], references: [id])
  bookings       Booking[]
  artist         Artist?   @relation(fields: [artistId], references: [id])
  orders         Order[]

  @@map("coupons")
}

model Order {
  id            String   @id @default(cuid())
  clientId      String
  workspaceId   String?
  total         Float
  discountValue Float    @default(0)
  finalTotal    Float
  couponId      String?
  status        String   @default("PENDING")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  client    User        @relation(fields: [clientId], references: [id])
  workspace Workspace?  @relation(fields: [workspaceId], references: [id])
  coupon    Coupon?     @relation(fields: [couponId], references: [id])
  items  OrderItem[]

  @@map("orders")
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  quantity  Int    @default(1)
  price     Float

  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

model Offer {
  id          String    @id @default(cuid())
  workspaceId String?
  title       String
  description String
  imageUrl    String?
  isActive    Boolean   @default(true)
  startsAt    DateTime?
  endsAt      DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  workspace   Workspace? @relation(fields: [workspaceId], references: [id])

  @@map("offers")
}

model Subscriber {
  id          String   @id @default(cuid())
  workspaceId String?
  email       String   @unique
  name        String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace   Workspace? @relation(fields: [workspaceId], references: [id])

  @@map("subscribers")
}

model KioskEntry {
  id           String   @id @default(cuid())
  workspaceId  String?
  name         String
  email        String?
  phone        String?
  type         String   // "CLIENT" or "COMPANION"
  marketingOptIn Boolean @default(false)
  
  // Strategic Profiling Fields
  instagram    String?
  barrier      String?  // What prevents them from tattooing
  intent       String?  // What they want to tattoo
  artistId     String?  // Lead attribution
  
  createdAt    DateTime @default(now())

  workspace    Workspace? @relation(fields: [workspaceId], references: [id])
  artist       Artist?    @relation(fields: [artistId], references: [id])

  @@map("kiosk_entries")
}


model Anamnesis {
  id          String   @id @default(cuid())
  clientId    String
  workspaceId String?
  bookingId   String?  @unique 
  
  // Questionário baseado no CSV fornecido (KRONØS Standard)
  fullName                  String?   // Qual seu nome completo?
  whatsapp                  String?   // Qual é o seu número do WhatsApp?
  birthDate                 String?   // Quando é o seu aniversário?
  medicalConditionsTattoo   String?   @db.Text // Você tem alguma condição médica que possa afetar o processo de tatuagem?
  medicalConditionsHealing  String?   @db.Text // Você possui alguma condição médica que possa afetar o processo de cicatrização da tatuagem?
  medicalConditionsHealingDetails String? @db.Text // Se sim, qual?
  knownAllergies           String?   @db.Text // Tem alguma alergia conhecida a produtos, como; tintas ou materiais de curativo?
  
  // Detalhes do Projeto (Snapshot)
  artistHandle             String?   // Qual o @ da(o) artista responsável pelo seu projeto?
  artDescription           String?   @db.Text // qual a arte?
  agreedValue              String?   // Qual foi o valor acertado entre você e o artista?
  
  // Confirmações e Termos
  understandPermanence      Boolean   @default(false) // Você compreende que a tatuagem é permanente e que os resultados podem variar?
  followInstructions        Boolean   @default(false) // Você seguirá as instruções do(a) tatuador(a) para garantir a correta cicatrização?
  acceptedTerms             Boolean   @default(false) // Confirmação dos TERMOS DE RESPONSABILIDADE

  // Assinatura e Metadados
  signatureData           String?   @db.Text // Assinatura digital (Base64/SVG)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  client    User       @relation(fields: [clientId], references: [id])
  workspace Workspace? @relation(fields: [workspaceId], references: [id])
  booking   Booking?   @relation(fields: [bookingId], references: [id])
  
  @@map("anamneses")
}

model HelpArticle {
  id          String   @id @default(cuid())
  workspaceId String?
  title       String
  content     String   @db.Text
  category    String
  keywords    String[] // Simula embeddings para busca simples
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace   Workspace? @relation(fields: [workspaceId], references: [id])

  @@map("help_articles")
}

model AgentLog {
  id          String   @id @default(cuid())
  userId      String
  workspaceId String?
  query       String   @db.Text
  response    String   @db.Text
  intent      String?
  createdAt   DateTime @default(now())
  
  user        User      @relation(fields: [userId], references: [id])
  workspace   Workspace? @relation(fields: [workspaceId], references: [id])

  @@map("agent_logs")
}

model WorkspaceRequest {
  id              String   @id @default(cuid())
  userId          String
  studioName      String
  teamDetails     String?  @db.Text
  motivation      String?  @db.Text
  status          RequestStatus @default(PENDING)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id])

  @@map("workspace_requests")
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}model Settlement {
  id              String           @id @default(cuid())
  artistId        String
  workspaceId     String
  totalValue      Float
  proofUrl        String?          @db.Text
  status          SettlementStatus @default(PENDING)
  
  // AI Validation Data
  aiConfidence    Float?           // 0.0 to 1.0
  aiExtractedData Json?            // { value, date, recipient, etc }
  aiFeedback      String?          @db.Text
  
  // Gamification / Token
  tokenData       Json?            // { glyphId, points, sequence }
  
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  artist          Artist           @relation(fields: [artistId], references: [id])
  workspace       Workspace        @relation(fields: [workspaceId], references: [id])
  bookings        Booking[]

  @@map("settlements")
}

